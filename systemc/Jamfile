# compile & link
lib libsystemc.so
        : [ glob-tree *.cpp : .svn .git ]                # take all cpp files in tree below the src folder, avoid .svn .git subfolders
          [ glob *.o ]                                   # take object files in src (3 .o files of quickthreads,
